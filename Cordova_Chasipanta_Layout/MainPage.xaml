<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cordova_Chasipanta_Layout.MainPage">

    <FlexLayout Direction="Column">

            <!-- Rojo -->
            <Label 
               FontSize="18"
               WidthRequest="20"
               BackgroundColor="Red"
                />

            <!-- Body -->
            <FlexLayout FlexLayout.Grow="1">

            <!-- Negro -->
            <Label 
               FontSize="18"
               WidthRequest="20"
               BackgroundColor="Black"
                />
            <!-- Content -->
            <Label 
                   FontSize="18"
                   BackgroundColor="Gray"
                   FlexLayout.Grow="1" />

            <!-- Navigation items-->
                    <BoxView FlexLayout.Basis="50"
                         FlexLayout.Order="-1"
                         Color="Blue" />

                    <BoxView FlexLayout.Basis="50"
                         Color="Green" />

            </FlexLayout>

            <!-- Azul -->
            <Label
               FontSize="18"
               WidthRequest="20"
               BackgroundColor="Blue"
             />
        <!-- Verde -->
        <Label
            
                   FontSize="18"
                   WidthRequest="20"
                   BackgroundColor="Green"
                 />

        <!-- Amarillo -->
        <Label
            
                   FontSize="18"
                   WidthRequest="20"
                   BackgroundColor="Yellow"
                 />

    </FlexLayout>
    </ContentPage>

